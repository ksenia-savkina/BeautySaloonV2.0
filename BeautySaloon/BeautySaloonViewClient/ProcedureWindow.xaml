<Window x:Class="PerformerView.ProcedureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PerformerView"
        mc:Ignorable="d"
        Title="ProcedureWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Right">
            <Button Content="Добавить" HorizontalAlignment="Left" Height="43" Margin="0,50,100,15" VerticalAlignment="Top" Width="147"/>
            <Button Content="ИЗменить" HorizontalAlignment="Left" Height="38" Margin="0,15,100,15" VerticalAlignment="Top" Width="147"/>
            <Button Content="Удалить" HorizontalAlignment="Left" Height="39" Margin="0,15,100,15" VerticalAlignment="Top" Width="147"/>
            <Button Content="Обновить" HorizontalAlignment="Left" Height="33" Margin="0,15,100,15" VerticalAlignment="Top" Width="147"/>

        </StackPanel>
        <DataGrid HorizontalAlignment="Left" Height="250" Margin="50,50,0,0" VerticalAlignment="Top" MinWidth="300"/>

    </Grid>
</Window>
